{
  "name": "pm-cli-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Unified project management CLI - Monorepo",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r lint",
    "test": "vitest",
    "clean": "pnpm -r clean",
    "pm": "pnpm --filter @jogi47/pm-cli pm",
    "prepublish:check": "pnpm build && pnpm test && pnpm lint",
    "publish:dry": "pnpm -r publish --dry-run --no-git-checks",
    "publish:all": "pnpm -r publish --no-git-checks --access public"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264"
}
