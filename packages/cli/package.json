{
  "name": "@jogi47/pm-cli",
  "version": "0.2.3",
  "description": "Unified project management CLI",
  "type": "module",
  "bin": {
    "pm": "./bin/run.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "publishConfig": {
    "access": "public"
  },
  "oclif": {
    "bin": "pm",
    "dirname": "pm-cli",
    "commands": {
      "strategy": "pattern",
      "target": "./dist/commands"
    },
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-autocomplete"
    ],
    "topicSeparator": " "
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch",
    "clean": "rm -rf dist",
    "lint": "tsc -b --pretty false",
    "pm": "./bin/dev.js"
  },
  "dependencies": {
    "@oclif/core": "^4.0.0",
    "@oclif/plugin-help": "^6.0.0",
    "@jogi47/pm-cli-core": "workspace:^",
    "@jogi47/pm-cli-plugin-asana": "workspace:^",
    "@jogi47/pm-cli-plugin-notion": "workspace:^",
    "@jogi47/pm-cli-plugin-trello": "workspace:^",
    "@jogi47/pm-cli-plugin-linear": "workspace:^",
    "@jogi47/pm-cli-plugin-clickup": "workspace:^",
    "@inquirer/prompts": "^5.0.0",
    "open": "^10.0.0",
    "@oclif/plugin-autocomplete": "^3.2.30"
  },
  "devDependencies": {
    "@oclif/test": "^4.0.0",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  }
}
