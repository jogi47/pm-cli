{
  "name": "@jogi47/pm-cli-core",
  "version": "0.2.5",
  "description": "Core models, managers, and utilities for pm-cli",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./models": {
      "import": "./dist/models/index.js",
      "types": "./dist/models/index.d.ts"
    },
    "./managers": {
      "import": "./dist/managers/index.js",
      "types": "./dist/managers/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch",
    "clean": "rm -rf dist",
    "lint": "tsc -b --pretty false"
  },
  "dependencies": {
    "conf": "^12.0.0",
    "lowdb": "^7.0.0",
    "cli-table3": "^0.6.5",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  }
}
